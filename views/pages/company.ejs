<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Company Dashboard - PlaceCell</title>
    <link rel="stylesheet" href="/css/company.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <div class="container">
        <h1 class="logo"><span class="logo-accent">Place</span>Cell</h1>
        <nav>
          <a href="/" class="nav-link">Home</a>
          <a href="/logout" class="nav-link">Logout</a>
        </nav>
      </div>
    </header>

    <!-- Job Posting Form -->
    <section class="job-post-section">
      <div class="container">
        <h2 class="section-title">Post a Job Opportunity</h2>

        <form action="/company/post-job" method="POST" class="job-form">
          <div class="form-group">
            <label for="title">Job Title</label>
            <input type="text" name="title" id="title" required />
          </div>

          <div class="form-group">
            <label for="companyName">Company Name</label>
            <input type="text" name="companyName" id="companyName" required />
          </div>

          <div class="form-group">
            <label for="location">Job Location</label>
            <input type="text" name="location" id="location" required />
          </div>

          <div class="form-group">
            <label for="description">Job Description</label>
            <textarea name="description" id="description" rows="5" required></textarea>
          </div>

          <div class="form-group">
            <label for="notification">Notification/Instructions</label>
            <textarea name="notification" id="notification" rows="3"></textarea>
          </div>

          <button type="submit" class="submit-btn">Post Job</button>
        </form>
      </div>
    </section>

    <!-- <script src="/js/company.js"></script> -->
  </body>
</html>
