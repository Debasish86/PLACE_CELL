<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Company Dashboard - PlaceCell</title>
    <link rel="stylesheet" href="/css/company.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <div class="container">
        <h1 class="logo"><span class="logo-accent">Place</span>Cell</h1>
        <nav>
          <a href="/" class="nav-link">Home</a>
          <a href="/logout" class="nav-link">Logout</a>
        </nav>
      </div>
    </header>

    <!-- Job Posting Form -->
<section class="job-post-section">
  <div class="container">
    <h2 class="section-title">Post a Job Opportunity</h2>

    <form action="/company/post-job" method="POST" class="job-form">
      <!-- Job Title -->
      <div class="form-group">
        <label for="title">Job Title</label>
        <input type="text" name="title" id="title" required />
      </div>

      <!-- Company Name -->
      <div class="form-group">
        <label for="companyName">Company Name</label>
        <input type="text" name="companyName" id="companyName" required />
      </div>

      <!-- Job Location -->
      <div class="form-group">
        <label for="location">Job Location</label>
        <input type="text" name="location" id="location" required />
      </div>

      <!-- Job Description -->
      <div class="form-group">
        <label for="description">Job Description</label>
        <textarea name="description" id="description" rows="5" required></textarea>
      </div>

      <!-- Notification -->
      <div class="form-group">
        <label for="notification">Notification/Instructions</label>
        <textarea name="notification" id="notification" rows="3"></textarea>
      </div>

      <!-- Job ID -->
      <div class="form-group">
        <label for="jobId">Job ID</label>
        <input type="text" name="jobId" id="jobId" required />
      </div>

      <!-- Last Date to Apply -->
      <div class="form-group">
        <label for="lastDateToApply">Last Date to Apply</label>
        <input type="date" name="lastDateToApply" id="lastDateToApply" required />
      </div>

      <!-- Apply Link -->
      <div class="form-group">
        <label for="applyLink">Application Link</label>
        <input type="url" name="applyLink" id="applyLink" required />
      </div>

      <!-- Salary -->
      <div class="form-group">
        <label for="salary">Salary</label>
        <input type="text" name="salary" id="salary" />
      </div>

      <!-- Number of Openings -->
      <div class="form-group">
        <label for="numberOfOpenings">Number of Openings</label>
        <input type="number" name="numberOfOpenings" id="numberOfOpenings" min="1" />
      </div>

      <button type="submit" class="submit-btn">Post Job</button>
    </form>
  </div>
</section>


    <!-- <script src="/js/company.js"></script> -->
  </body>
</html>
